{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "gcc",
			"command": "D:\\MinGW\\bin\\gcc.exe",
			"args": [
				"-g",
				"${fileDirname}\\*.c",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}